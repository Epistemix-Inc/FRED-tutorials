
condition StayHome {

    state No {}

    state Symptoms {
        wait(0)
        next(Yes) with prob(0.5)
        default(No)
    }

    state Yes {
        absent()
        present(Household)
        wait()
        next()
    }
}


state INFLUENZA.InfectiousSymptomatic {
    set_state(StayHome,Symptoms)
}


state INFLUENZA.Recovered {
    set_state(StayHome,No)
}

