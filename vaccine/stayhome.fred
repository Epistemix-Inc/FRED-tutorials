
condition STAY_HOME {

    state No {}

    state Symptoms {
        wait(0)
        next(Yes) with prob(0.5)
        default(No)
    }

    state Yes {
        absent()
        present(Household)
        wait()
        next()
    }
}


state INFLUENZA.InfectiousSymptomatic {
    set_state(STAY_HOME,Symptoms)
}


state INFLUENZA.Recovered {
    set_state(STAY_HOME,No)
}

