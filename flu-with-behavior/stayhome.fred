
condition StayHome {

    state No {}

    state Symptoms {
        wait(0)
        next(Yes) with prob(0.5)
        default(No)
    }

    state Yes {
        absent()
        present(Household)
        wait()
        next()
    }
}


state INF.Is {
    set_state(StayHome,No,Symptoms)
}


state INF.R {
    set_state(StayHome,Yes,No)
}

